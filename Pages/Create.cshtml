@page
@model Assignment3.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Posts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Posts.UserID" class="control-label"></label>
                <select asp-for="Posts.UserID" class ="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Posts.CreatedDate" class="control-label"></label>
                <input asp-for="Posts.CreatedDate" class="form-control" />
                <span asp-validation-for="Posts.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posts.UpdatedDate" class="control-label"></label>
                <input asp-for="Posts.UpdatedDate" class="form-control" />
                <span asp-validation-for="Posts.UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posts.Title" class="control-label"></label>
                <input asp-for="Posts.Title" class="form-control" />
                <span asp-validation-for="Posts.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posts.Content" class="control-label"></label>
                <input asp-for="Posts.Content" class="form-control" />
                <span asp-validation-for="Posts.Content" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Posts.PublishStatus" /> @Html.DisplayNameFor(model => model.Posts.PublishStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Posts.CategoryID" class="control-label"></label>
                <select asp-for="Posts.CategoryID" class ="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
